<div class="photo-list">
  <form class="photo-body" method='post'>
    <div class="form-item"><strong>设置相片路径：</strong></div>
    <div class="form-item">
      标题 <input type="text" name="title" value="<%=photo.title%>"/>
    </div>
    <div class="form-item">
      原图地址 <input type="text" class="photo-url" name="raw_url" value="<%=photo.raw_url%>"/>

      <div class="preview-raw">
        <img src="<%=photo.raw_url%>"/>
      </div>
    </div>
    <div class="form-item">
      缩略图地址 <input type="text" class="photo-url" name="preview_url" value="<%=photo.preview_url%>"/>

      <div class="preview-small">
        <img src="<%=photo.preview_url%>"/>
      </div>
    </div>
    <input type="hidden" name="photo_id" value="<%=photo.photo_id%>"/>
    <input type="submit" value="保存" class="form-save"/>
  </form>
</div>
